
#define _CRT_SECURE_NO_WARNINGS

#include <stdio.h>

int a[] = { 5, 9, 7, 6, 4, 0, 2, 3, 8, 1 };
int length = 10;

int E[10];
int O[10];

int odd_count = 0;
int even_count = 0;

void main()
{
	
	for (int x = 0; x < length; x++)
	{
		if (a[x] % 2 == 0)
		{
			E[even_count] = a[x];
			even_count++;
		}
		
		else
		{
			O[odd_count] = a[x];
			odd_count++;
		}
	}
	


	for (int b = 0; b < odd_count - 1; b++)
	{
		int min_pos = b;
		for (int c = b + 1; c < odd_count; c++)
		{
			if (O[c] < O[min_pos])
			{
				min_pos = c;
			}

			if (min_pos != b)
			{
				int temp = O[b];
				O[b] = O[min_pos];
				O[min_pos] = temp;
			}
		}
	}

	for (int b = 0; b < even_count - 1; b++)
	{
		int min_pos = b;
		for (int c = b + 1; c < even_count; c++)
		{
			if (E[c] < E[min_pos])
			{
				min_pos = c;
			}

			if (min_pos != b)
			{
				int temp = E[b];
				E[b] = E[min_pos];
				E[min_pos] = temp;
			}
		}
	}




	for (int y = 0; y < odd_count; y++)
	{
		printf("%d", O[y]);
	}

	for (int y = 0; y < even_count; y++)
	{
		printf("%d", E[y]);
	}
}
